    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="ru.kpfu.itis.android.asadullin.ui.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/coroutinesFragment"
